<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Project">
	<TargetFramework>net5.0</TargetFramework>
	<LangVersion>8.0</LangVersion>
    <AssemblyTitle>Vitaru</AssemblyTitle>
	<Version>0.11.0</Version>
	<Authors>Shawdooow</Authors>
	<Company>Sym</Company>
	<Description>A bullet dodging rhythym game.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ApplicationIcon>vitaru.ico</ApplicationIcon>
    <OutputType>Exe</OutputType>
    <StartupObject />
    <Configurations>Debug;Release;Publish</Configurations>
    <Platform>AnyCPU</Platform>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Publish|AnyCPU'">
    <DefineConstant>PUBLISH</DefineConstant>
    <OutputType>WinExe</OutputType>
    <Optimize>true</Optimize>
	<SignAssembly>true</SignAssembly>
	<DelaySign>false</DelaySign>
	<AssemblyOriginatorKeyFile>..\..\Sym.pfx</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Gamemodes\Tau\**" />
    <Compile Remove="Gamemodes\Vitaru\HitObjects\**" />
    <EmbeddedResource Remove="Gamemodes\Tau\**" />
    <EmbeddedResource Remove="Gamemodes\Vitaru\HitObjects\**" />
    <None Remove="Gamemodes\Tau\**" />
    <None Remove="Gamemodes\Vitaru\HitObjects\**" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Prion\Prion.Game\Prion.Game.csproj" />
    <ProjectReference Include="..\Vitaru.Server\Vitaru.Server.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Assets\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(SolutionDir)\Vitaru.Server\bin\Publish\net5.0\Vitaru.Server.deps.json&quot; &quot;$(TargetDir)&quot;&#xD;&#xA;xcopy &quot;$(SolutionDir)\Vitaru.Server\bin\Publish\net5.0\Vitaru.Server.runtimeconfig.dev.json&quot; &quot;$(TargetDir)&quot;&#xD;&#xA;xcopy &quot;$(SolutionDir)\Vitaru.Server\bin\Publish\net5.0\Vitaru.Server.runtimeconfig.json&quot; &quot;$(TargetDir)&quot;&#xD;&#xA;&#xD;&#xA;if $(ConfigurationName) == Publish cd $(TargetDir) &#xD;&#xA;del Prion.Application.pdb&#xD;&#xA;del Prion.Game.pdb&#xD;&#xA;del Vitaru.pdb&#xD;&#xA;del Vitaru.Server.pdb" />
  </Target>
</Project>