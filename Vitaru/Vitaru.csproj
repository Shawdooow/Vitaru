<Project Sdk="Microsoft.NET.Sdk">
  <Import Condition=" '$(EAZFUSCATOR_NET_HOME)' != '' and Exists('$(EAZFUSCATOR_NET_HOME)\Integration\MSBuild\Eazfuscator.NET.targets') " Project="$(EAZFUSCATOR_NET_HOME)\Integration\MSBuild\Eazfuscator.NET.targets" />
  <PropertyGroup Label="Project">
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <AssemblyTitle>Vitaru</AssemblyTitle>
    <Description>Vitaru</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputType>Exe</OutputType>
    <StartupObject>Vitaru.Vitaru</StartupObject>
    <Configurations>Debug;Release;Publish</Configurations>
    <Platform>AnyCPU</Platform>
    <!-- Eazfuscator.NET is integrated with this project at MSBuild level: https://www.gapotchenko.com/eazfuscator.net/kb/100036 -->
    <EazfuscatorIntegration>MSBuild</EazfuscatorIntegration>
    <EazfuscatorActiveConfiguration>Publish</EazfuscatorActiveConfiguration>
    <EazfuscatorCompatibilityVersion>2020.1</EazfuscatorCompatibilityVersion>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Publish|AnyCPU'">
    <DefineConstant>PUBLISH</DefineConstant>
    <OutputType>WinExe</OutputType>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationIcon>vitaru.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Prion\Prion.Game\Prion.Game.csproj" />
    <ProjectReference Include="..\Vitaru.Server\Vitaru.Server.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Assets\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Assets\Textures\Gameplay\" />
    <Folder Include="Assets\Textures\Backgrounds\" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="cd $(TargetDir) &#xD;&#xA;del MP3Sharp.dll&#xD;&#xA;del OpenTK.dll&#xD;&#xA;del runtime.osx.10.10-x64.CoreCompat.System.Drawing.dll&#xD;&#xA;del SharpDX.D3DCompiler.dll&#xD;&#xA;del SharpDX.Desktop.dll&#xD;&#xA;del SharpDX.Direct3D12.dll&#xD;&#xA;del SharpDX.dll&#xD;&#xA;del SharpDX.DXGI.dll&#xD;&#xA;del SharpDX.Mathematics.dll&#xD;&#xA;del SharpDX.XAudio2.dll&#xD;&#xA;del SharpDX.XInput.dll&#xD;&#xA;del System.Management.dll&#xD;&#xA;del Vulkan.dll&#xD;&#xA;" />
  </Target>
</Project>