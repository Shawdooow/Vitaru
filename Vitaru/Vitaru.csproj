<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Project">
	  <TargetFramework>net6.0-windows</TargetFramework>
    <AnalysisLevel>preview</AnalysisLevel>
	  <LangVersion>9.0</LangVersion>
    <AssemblyTitle>Vitaru</AssemblyTitle>
	  <Version>0.12.0</Version>
	  <Authors>Shawdooow</Authors>
	  <Company>Sym</Company>
	  <Description>A bullet dodging rhythym game.</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputType>Exe</OutputType>
    <StartupObject />
    <Configurations>Debug;Release;Publish;Personal</Configurations>
    <Platform>AnyCPU</Platform>
    <ApplicationIcon>Assets\Textures\vitaru.ico</ApplicationIcon>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Publish' Or '$(Configuration)'=='Personal'">
    <DefineConstants>PUBLIC</DefineConstants>
    <OutputType>WinExe</OutputType>
    <Optimize>true</Optimize>
    <SignAssembly>true</SignAssembly>
    <DelaySign>false</DelaySign>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <AssemblyOriginatorKeyFile>..\..\Sym.pfx</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Personal'">
    <DefineConstant>PERSONAL</DefineConstant>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Prion\Prion.Golgi\Prion.Golgi.csproj" />
    <ProjectReference Include="..\Vitaru.Server\Vitaru.Server.csproj" />
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)'=='Publish'">
    <None Remove="Assets\Models\SN10.obj" />
    <None Remove="Assets\Sounds\SN10 Flight.wav" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Assets\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>