<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Project">
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <AssemblyTitle>Vitaru</AssemblyTitle>
    <Description>Vitaru</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <OutputType>Exe</OutputType>
    <StartupObject>Vitaru.Vitaru</StartupObject>
    <Configurations>Debug;Release;Publish</Configurations>
    <Platform>AnyCPU</Platform>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Publish|AnyCPU'">
    <DefineConstant>PUBLISH</DefineConstant>
    <OutputType>WinExe</OutputType>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationIcon>vitaru.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Prion\Prion.Game\Prion.Game.csproj" />
    <ProjectReference Include="..\..\Prion\Prion.Integrations\Prion.Integrations.csproj" />
    <ProjectReference Include="..\Vitaru.Server\Vitaru.Server.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Assets\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
