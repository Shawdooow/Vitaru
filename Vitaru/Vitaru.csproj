<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Project">
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <AssemblyTitle>Vitaru</AssemblyTitle>
    <Description>Vitaru</Description>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ApplicationIcon>vitaru.ico</ApplicationIcon>
    <OutputType>Exe</OutputType>
    <StartupObject />
    <Configurations>Debug;Release;Publish</Configurations>
    <Platform>AnyCPU</Platform>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Publish|AnyCPU'">
    <DefineConstant>PUBLISH</DefineConstant>
    <OutputType>WinExe</OutputType>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup>
    <RunPostBuildEvent>OnBuildSuccess</RunPostBuildEvent>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Prion\Prion.Game\Prion.Game.csproj" />
    <ProjectReference Include="..\Vitaru.Server\Vitaru.Server.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Update="Assets\**\*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if $(ConfigurationName) == Publish cd $(TargetDir) &#xD;&#xA;del Prion.Application.pdb&#xD;&#xA;del Prion.Game.pdb&#xD;&#xA;del Vitaru.pdb&#xD;&#xA;del Vitaru.Server.pdb" />
  </Target>
</Project>